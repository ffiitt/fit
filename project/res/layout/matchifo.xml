<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F8F8FF">
    
    <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="39dp"
       android:background="#ed4255">

   <TextView
       android:id="@+id/text_title"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_alignParentBottom="true"
       android:layout_alignParentLeft="true"
       android:ellipsize="marquee"
       android:gravity="center_horizontal"
       android:paddingTop="6dp"
       android:text="F I T"
       android:textColor="#ffffffff"
       android:textSize="20dp" />
   <Button
       android:id = "@+id/back"
       android:layout_marginTop="6dp"
       android:layout_width = "55dp"
       android:layout_height = "30dp"
       android:drawablePadding="1dp"
       android:paddingLeft="1dp"
       android:drawableLeft="@drawable/back"
       android:gravity="center"
       android:onClick="onClick"
       android:text="返回"
       android:textSize="15dp"
       android:textColor="#ffffffff"
       android:background="@android:color/transparent"
       />  
   <ImageButton
       android:id="@+id/myhome"
       android:layout_width="30dp"
       android:paddingTop="1dp"
       android:layout_alignParentRight="true"
       android:layout_marginRight="10dp"
       android:background="@android:color/transparent"
       android:layout_height="35dp"
       android:src="@drawable/user"/>
   </RelativeLayout> 
   <View 
       android:id = "@+id/matchpic"
       android:layout_height="200dp"
       android:layout_width = "400dp"
       android:layout_marginTop="40dp"
       android:layout_marginLeft="0dp"/>

   
   
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "260dp"
       android:layout_width = "300dp"
       android:layout_height = "40dp"
       android:id = "@+id/matchtime"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>
   
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "300dp"
       android:layout_width = "300dp"
       android:layout_height = "40dp"
       android:id = "@+id/matchposi"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>

       
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "340dp"
       android:layout_width = "300dp"
       android:layout_height = "40dp"
       android:id = "@+id/matchhost"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>
   
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "380dp"
       android:layout_width = "300dp"
       android:layout_height = "40dp"
       android:id = "@+id/matchjoin_endtime"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>
   
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "420dp"
       android:layout_width = "300dp"
       android:layout_height = "40dp"
       android:id = "@+id/joinway"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>
   
   <TextView
       android:layout_marginLeft = "30dp"
       android:layout_marginTop = "460dp"
       android:layout_width = "300dp"
       android:layout_height = "100dp"
       android:id = "@+id/matchifo"
       android:textSize = "20dp"
       android:text = "dwawafwfaw">
   </TextView>
</RelativeLayout>
